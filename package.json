{
  "name": "ws_task",
  "version": "1.0.0",
  "description": "Template for the WebSocket remote control task",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": " ts-node ./src/app.ts",
    "start:front": " ts-node ./src/app.ts",
    "start:dev": "nodemon -e ts -w ./src -x ts-node ./src/app.ts",
    "start:all": "concurrently \"(npm start --prefix ./front/remote-control)\" \"(npm run start)\"",

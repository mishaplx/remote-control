    "concurrently": "^7.2.2",
    "nodemon": "^2.0.16"
  },
  "dependencies": {
    "@nut-tree/nut-js": "^3.0.0",
    "jimp": "^0.16.1",
    "prettier": "^2.7.1",
    "ws": "^8.8.0",
    "dotenv": "^16.0.1"
  }
}
